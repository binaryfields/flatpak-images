{
    "app-id": "com.jetbrains.CLion",
    "branch": "stable",
    "command": "clion",
    "runtime": "org.freedesktop.Sdk",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "separate-locales": false,
    "finish-args": [
        "--device=all",
        "--filesystem=home",
        "--share=ipc",
        "--share=network",
        "--socket=pulseaudio",
        "--socket=x11",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "modules": [
        {
            "name": "clion",
            "buildsystem": "simple",
            "build-commands": [
                "install -D apply_extra /app/bin/apply_extra",
                "install -D clion.sh /app/bin/clion",
                "install -Dm644 com.jetbrains.CLion.desktop /app/share/applications/com.jetbrains.CLion.desktop",
                "install -Dm644 com.jetbrains.CLion.png /app/share/icons/hicolor/128x128/apps/com.jetbrains.CLion.png",
                "install -Dm644 com.jetbrains.CLion-64.png /app/share/icons/hicolor/64x64/apps/com.jetbrains.CLion.png"
            ],
            "sources": [
                {
                    "type": "script",
                    "dest-filename": "apply_extra",
                    "commands": [
                        "tar xf clion.tar.gz --strip 1",
                        "rm clion.tar.gz"
                    ]
                },
                {
                    "type": "script",
                    "dest-filename": "clion.sh",
                    "commands": [ "/app/extra/bin/clion.sh" ]
                },
                {
                    "type": "file",
                    "path": "com.jetbrains.CLion.desktop"
                },
                {
                    "type": "file",
                    "path": "com.jetbrains.CLion.png"
                },
                {
                    "type": "file",
                    "path": "com.jetbrains.CLion-64.png"
                },
                {
                    "type": "extra-data",
                    "filename": "clion.tar.gz",
                    "only-arches": [ "x86_64" ],
                    "url": "https://download.jetbrains.com/cpp/CLion-2017.3.3.tar.gz",
                    "sha256": "6d807282a36f25e922580f1c8b2155705d4a20aa8d4e4c06bf17193f0c020948",
                    "size": 331047955
                }
            ]
        }
    ]
}